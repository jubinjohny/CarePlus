<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/mainbgm"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".entry.EntryFragmentFirst">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="306dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="455dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/careplus_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CarePlus"
            android:textAlignment="center"
            android:textSize="70dp"
            android:textColor="#0219BD"
            android:fontFamily="@font/poppins_regular"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loginButtonMain"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/continuebutton" />


    </LinearLayout>


</FrameLayout>