<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/entrytwobgm"
    tools:context=".entry.EntryFragmentSecond">

    <LinearLayout
        android:id="@+id/patient_layout"
        android:layout_width="353dp"
        android:layout_height="225dp"
        android:layout_gravity="start"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/patientAnimation"
            android:layout_width="285dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/patientanimation" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:fontFamily="@font/entry_two_fonts"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:padding="0dp"
                android:textColor="#024880"
                android:layout_marginLeft="65dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="I'm a Patient"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/nextPatient"
                android:layout_width="0dp"
                android:padding="0dp"
                android:layout_weight="0.5"
                android:layout_marginRight="30dp"
                android:layout_height="50dp"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                android:layout_gravity="center"
                app:lottie_rawRes="@raw/test" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/clinic_layout"
        android:layout_width="363dp"
        android:layout_height="238dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patient_layout">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/clinicAnimation"
            android:layout_width="282dp"
            android:layout_height="179dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/clinicanimation" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:fontFamily="@font/entry_two_fonts"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:padding="0dp"
                android:textColor="#024880"
                android:layout_marginLeft="65dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="This is a Clinic"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/nextClinic"
                android:layout_width="0dp"
                android:padding="0dp"
                android:layout_weight="0.5"
                android:layout_marginRight="30dp"
                android:layout_height="50dp"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                android:layout_gravity="center"
                app:lottie_rawRes="@raw/test" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/doctor_layout"
        android:layout_width="371dp"
        android:layout_height="246dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clinic_layout"
        app:layout_constraintVertical_bias="1.0">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/doctorAnimation"
            android:layout_width="282dp"
            android:layout_height="179dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/doctoranimation" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:fontFamily="@font/entry_two_fonts"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:padding="0dp"
                android:textColor="#024880"
                android:layout_marginLeft="65dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="I'm a Doctor"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/nextDoctor"
                android:layout_width="0dp"
                android:padding="0dp"
                android:layout_weight="0.5"
                android:layout_marginRight="30dp"
                android:layout_height="50dp"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                android:layout_gravity="center"
                app:lottie_rawRes="@raw/test" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>