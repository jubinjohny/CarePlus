<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_bg"
    tools:context=".clinic.auth.home.ScheduleDoctorsFragment">

    <LinearLayout
        android:overScrollMode="ifContentScrolls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Schedule"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="-20dp">

            <TextView
                android:id="@+id/schedule_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="62dp"
            android:layout_marginRight="62dp">
            <TextView
                android:layout_gravity="center"
                android:layout_width="0sp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/poppins_regular"
                android:text="MONDAY"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:padding="5sp"
                android:textSize="15sp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0sp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_margin="2sp"
                    android:id="@+id/monday_fn"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_height="0sp"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="FN"
                    android:padding="5sp"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/monday_an"
                    android:layout_width="match_parent"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_height="0sp"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="AN"
                    android:padding="5sp"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="62dp"
            android:layout_marginRight="62dp">
            <TextView
                android:layout_gravity="center"
                android:layout_width="0sp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/poppins_regular"
                android:text="TUESDAY"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:padding="5sp"
                android:textSize="15sp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0sp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tuesday_fn"
                    android:layout_width="match_parent"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_height="0sp"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="FN"
                    android:padding="5sp"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tuesday_an"
                    android:layout_width="match_parent"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_height="0sp"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="AN"
                    android:padding="5sp"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="62dp"
            android:layout_marginRight="62dp">
            <TextView
                android:layout_gravity="center"
                android:layout_width="0sp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/poppins_regular"
                android:text="WEDNESDAY"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:padding="5sp"
                android:textSize="15sp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0sp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_margin="2sp"
                    android:id="@+id/wednesday_fn"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_height="0sp"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="FN"
                    android:padding="5sp"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/wednesday_an"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_height="0sp"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="AN"
                    android:padding="5sp"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="62dp"
            android:layout_marginRight="62dp">
            <TextView
                android:layout_gravity="center"
                android:layout_width="0sp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/poppins_regular"
                android:text="THURSDAY"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:padding="5sp"
                android:textSize="15sp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0sp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/thursday_fn"
                    android:layout_width="match_parent"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_height="0sp"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="FN"
                    android:padding="5sp"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/thursday_an"
                    android:layout_width="match_parent"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_height="0sp"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="AN"
                    android:padding="5sp"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="62dp"
            android:layout_marginRight="62dp">
            <TextView
                android:layout_gravity="center"
                android:layout_width="0sp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/poppins_regular"
                android:text="FRIDAY"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:padding="5sp"
                android:textSize="15sp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0sp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/friday_fn"
                    android:layout_width="match_parent"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_height="0sp"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="FN"
                    android:padding="5sp"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/friday_an"
                    android:layout_width="match_parent"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_height="0sp"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="AN"
                    android:padding="5sp"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="62dp"
            android:layout_marginRight="62dp">
            <TextView
                android:layout_gravity="center"
                android:layout_width="0sp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/poppins_regular"
                android:text="SATURDAY"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:padding="5sp"
                android:textSize="15sp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0sp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/saturday_fn"
                    android:layout_width="match_parent"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_height="0sp"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="FN"
                    android:padding="5sp"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/saturday_an"
                    android:layout_width="match_parent"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_height="0sp"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="AN"
                    android:padding="5sp"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="62dp"
            android:layout_marginRight="62dp">
            <TextView
                android:layout_gravity="center"
                android:layout_width="0sp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/poppins_regular"
                android:text="SUNDAY"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:padding="5sp"
                android:textSize="15sp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0sp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/sunday_fn"
                    android:layout_width="match_parent"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_height="0sp"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="FN"
                    android:padding="5sp"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/sunday_an"
                    android:layout_width="match_parent"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_height="0sp"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="AN"
                    android:padding="5sp"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_login_corners"
            android:padding="10dp"
            android:layout_marginRight="62dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_addtime"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/confirm_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:text="Confirm Schedule"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:textSize="15sp" />

        </RelativeLayout>
    </LinearLayout>

</ScrollView>